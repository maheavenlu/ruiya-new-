
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />   
    <meta name="author" content="ruiya" />
    <meta name="Copyright" content="ruiya" />
    <meta name="Description" content="@ViewBag.title" />
