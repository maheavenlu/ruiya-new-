@model ruiya.Models.happyFamily.happyFamilyStrategy

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" type="text/css" href="~/Content/DBSystem/Css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/DBSystem/Css/bootstrap-responsive.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/DBSystem/Css/style.css" />
    <script type="text/javascript" src="~/Content/DBSystem/Js/jquery.js"></script>
    <script type="text/javascript" src="~/Content/DBSystem/Js/jquery.sorted.js"></script>
    <script type="text/javascript" src="~/Content/DBSystem/Js/bootstrap.js"></script>
    <script type="text/javascript" src="~/Content/DBSystem/Js/ckform.js"></script>
    <script type="text/javascript" src="~/Content/DBSystem/Js/common.js"></script>
    <script type="text/javascript" src="~/Content/DBSystem/ckfinder/ckfinder.js"></script>
    <script type="text/javascript" src="~/Content/DBSystem/ckeditor/ckeditor.js"></script>
    <style>
        .tt {
            background-color: rgba(156, 219, 243, 0.48);
            height: 60px;
        }

        #create {
            margin: 50px;
        }
    </style>
</head>
<body>
    <div class="tt">
        <h2 style="color:#184196; margin-left:10%;">攻略上传</h2>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" id="create">
            <h4>全家乐新闻</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <span>序号: </span>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" id="index" name="index" type="text" value="@DateTime.Now.ToString("yyMMdd_HHmm")" style="width:25%;" readonly>
                    <span class="field-validation-valid text-danger" data-valmsg-for="index" data-valmsg-replace="true"></span>
                </div>
            </div>
            <br>
            <div class="form-group">
                <span>标题(字数不超过30): </span>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" id="title" name="title" type="text" value="" maxlength="30" style="width:40%;">
                    <span class="field-validation-valid text-danger" data-valmsg-for="title" data-valmsg-replace="true"></span>
                </div>
            </div>
            <br>
            <div class="form-group">
                <p>简介(字数不超过100)</p>
                <div class="col-md-10">
                    <textarea class="form-control text-box single-line" id="intro" name="intro" type="text" value="" maxlength="100" style="width:40%;"></textarea>
                    <span class="field-validation-valid text-danger" data-valmsg-for="intro" data-valmsg-replace="true"></span>
                </div>
            </div>
            <br>
            <div class="form-group">
                <p>url</p>
                <div class="col-md-10">
                    <textarea class="form-control text-box single-line" id="url" name="url" type="text" value=""  style="width:40%;"></textarea>
                    <span class="field-validation-valid text-danger" data-valmsg-for="url" data-valmsg-replace="true"></span>
                </div>
            </div>
            <br/>
            <div class="form-group">
                <p>内容编辑(右下角下拉)：</p>
                <div class="col-md-1">
                    <textarea class="form-control text-box single-line" id="content" name="content" type="text" value=""></textarea>
                    <span class="field-validation-valid text-danger" data-valmsg-for="content" data-valmsg-replace="true"></span>
                </div>
            </div>
            <br>
            <div class="form-group">
                <p>创建时间</p>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" id="createTime" name="createTime" type="text" value="@DateTime.Now.ToString("yyyy.MM.dd HH:mm:ss")" style="width:25%;" readonly>
                    <span class="field-validation-valid text-danger" data-valmsg-for="createTime" data-valmsg-replace="true"></span>
                </div>
            </div>
            <br>
            <div class="form-group">
                <p>创建者</p>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" id="creator" name="creator" type="text" value="@Session["username"]" style="width:25%;" readonly>
                    <span class="field-validation-valid text-danger" data-valmsg-for="creator" data-valmsg-replace="true"></span>
                </div>
            </div>
            <br>
            <div>
                <div>
                    <input type="submit" value="上传" class="btn btn-success col-md-offset-2 col-md-10 form-group" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <button type="button" class="btn btn-danger" onclick="location.href = '/DBSystem/happyfamily/News'">@Html.ActionLink("取消", "Index")</button>
                </div>

            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
<script type="text/javascript">
    CKEDITOR.config.width = 800;
    CKEDITOR.config.height = 600;
    var editor = CKEDITOR.replace('content');
    CKFinder.setupCKEditor(editor, '~/Content/DBSystem/ckfinder/');
</script> 
