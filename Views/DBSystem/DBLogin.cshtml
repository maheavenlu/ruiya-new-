
@{
    ViewBag.Title = "DBLogin";
    Layout = null;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Login</title>
    <script src="~/Content/DBSystem/Js/base64.js"></script>
    <script src="~/Content/DBSystem/Js/jquery.js"></script>
    <script type="text/javascript">
        window.onload = function () {
            /*************************
            *创建Base64对象，用于对数据的加密解密
            *获取输入password 和 username在提交时进行加密，
            ***************************/
            var base64 = new Base64();
            /*var Oform = document.getElementsByTagName("form")[0];
            Oform.onsubmit = function () {
                var password = document.getElementById("password").value;
                var username = document.getElementById("username").value;
                document.getElementById("password").value = base64.encode(password);
                document.getElementById("username").value = base64.encode(username);
                //alert(pass + document.getElementById("password").value);
            }*/
            var Oform = document.getElementsByTagName("form")[0];
            Oform.onsubmit = function () {
                $("#password").val(base64.encode($("#password").val()));
                $("#username").val(base64.encode($("#username").val()));
            }
        }
    </script>
    <style>
        * {
            margin: 0px;
            padding: 0px;
            font-family: "微软雅黑";
        }

        html, body {
            width: 100%;
        }

        #header {
            width: 100%;
            height: 100px;
            background: rgba(156, 219, 243, 0.48);
        }

            #header h1 {
                float: left;
                margin-left: 14%;
                margin-top: 30px;
                font-family: 'Microsoft YaHei';
                font-weight: 700;
                color: #184196;
            }

        #nav {
            float: right;
            position: relative;
        }

        #main {
            width: 80%;
            height: 350px;
            margin: 50px auto; /*border:1px solid #00FF66; */
            position: relative;
            /*background: url(image/text.png) no-repeat;*/
            background: url('../../Content/DBSystem/images/tree.jpg') no-repeat;
            background-size: auto;
        }

        #Dlogin {
            width: 31%;
            height: 300px;
            border: 1px solid #009900;
            position: absolute;
            right: 8%;
            border-radius: 3px;
        }

        #pic {
            width: 56%;
            height: 350px;
            background: url('../../Content/DBSystem/images/tree.jpg') no-repeat;
            background-size: contain;
            position: absolute;
            margin-right: 12%;
        }

        #Dlogin #head {
            height: 50px;
            border-bottom: 1px solid #95A291;
            background: #ECE6F7;
            font-size: 20px;
            text-align: center;
            line-height: 50px;
            font-family: "微软雅黑";
            margin-bottom: 30px;
        }

        .inputnm {
            width: 30px;
            color: #000000;
        }

        .inputstyle {
            width: 75%;
            height: 38px;
            border-radius: 2px;
            border: 1px solid #96a5b4;
            margin-right: 5px 5%;
            margin-top: 16px;
            font-size: 17px;
        }

        #flogin span {
            margin-left: 4%;
            margin-right: 5%;
        }

        .submit {
            width: 68%;
            height: 40px;
            background: #6B53F7;
            border-radius: 8px;
            margin: 15px 15%;
            font-size: 22px;
            line-height: 40px;
            font-family: "微软雅黑";
            color: #FFFFFF;
            cursor: pointer;
        }

        .error {
            font-size: 20px;
            color: #ff0000;
            text-align: center;
            line-height: 20px;
            /*border:1px solid #009900;*/
        }
    </style>
</head>

<body>
    <div id="header">
        <h1>瑞亚新闻发布管理系统</h1>
    </div>
    <div id="main">
        <div id="pic"></div>
        <div id="Dlogin">

            <div id="head">管理登录</div>
            <form id="flogin" action="LoginProcess" method="post">
                <span>账号</span>
                <input type="text" class="inputstyle" name="username" id="username" /><br />
                <span>密码</span>
                <input type="password" class="inputstyle" name="password" id="password" /><br />
                <!--<a class="uncheck" id="p_low_login_enable" href="javascript:void(0);" tabindex="5"></a> -->
                <input type="submit" value="登录" class="submit" />	<br />
                @{
                    if (ViewBag.error == 1)
                    {
                        <div class="error">用户名不存在！</div>
                        ViewBag.error = 0;
                    }
                    else if (ViewBag.error == 2)
                    {
                        <div class="error">密码错误</div>
                        ViewBag.error = 0;
                    }
                }
            </form>
        </div>
    </div>

</body>
</html>


