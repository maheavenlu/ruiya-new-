
@{
    ViewBag.Title = "DBSystem";
    Layout = null;
}


<!DOCTYPE HTML>
<html>
<head>
    <title>后台管理系统</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/Content/DBSystem/assets/css/dpl-min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/DBSystem/assets/css/bui-min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/DBSystem/assets/css/main-min.css" rel="stylesheet" type="text/css" />
</head>
<body>

    <div class="header">

        <div class="dl-title">
            <!--<img src="/chinapost/Public/assets/img/top.png">-->
        </div>

        <div class="dl-log">
            欢迎您，<span class="dl-log-user"> @Session["username"] </span><a href="DBSystem/LogoutProcess" title="退出系统" class="dl-log-quit">[退出]</a>
            
            <p></p>
        </div>
    </div>
    <div class="content">
        <div class="dl-main-nav">
            <div class="dl-inform"><div class="dl-inform-title"><s class="dl-inform-icon dl-up"></s></div></div>
            <ul id="J_Nav" class="nav-list ks-clear">               
                <li class="nav-item dl-selected"><div class="nav-item-inner nav-order">信息管理</div></li>
                <li class="nav-item dl-selected"><div class="nav-item-inner nav-home">系统管理</div></li>

            </ul>
        </div>
        <ul id="J_NavContent" class="dl-tab-conten"></ul>
    </div>
    <script type="text/javascript" src="~/Content/DBSystem/assets/js/jquery-1.8.1.min.js"></script>
    <script type="text/javascript" src="~/Content/DBSystem/assets/js/bui-min.js"></script>
    <script type="text/javascript" src="~/Content/DBSystem/assets/js/common/main-min.js"></script>
    <script type="text/javascript" src="~/Content/DBSystem/assets/js/config-min.js"></script>
    <script>
    BUI.use('common/main',function(){
        var config = [
        {
            id: '1',
            menu:
            [
         @{ 
             int ruiyalel = (int)Session["ruiyaLev"];
             int happyfamilylel = (int)Session["happyfamilyLev"];

             if (ruiyalel > 0) {
              <text>
              {
                  text: '瑞亚官网', items: [{ id: '3', text: '瑞亚新闻', href: 'DBSystem/ruiya/News' }, ]
              },
              </text>
             }
             if (happyfamilylel > 0){
              <text>
              {
                  text: '全家乐', items: [{ id: '4', text: '新闻信息', href: 'DBSystem/happyfamily/News' },
                                         { id: '5', text: '活动信息', href: 'DBSystem/happyfamily/Activity' },
                                         { id: '6', text: '公告信息', href: 'DBSystem/happyfamily/GeneralMes' },
                                         { id: '7', text: '攻略信息', href: 'DBSystem/happyfamily/Strategy' }, ]
              },
              </text>
             }
         }            
            ]
        },
        {           
            id: '2',
            menu:
            [
        @{ 
            int dbsystemlel = (int)Session["dbsystemLel"];
            if (dbsystemlel > 0){
             <text>
                {
                    text: '系统管理', items: [{ id: '11', text: '用户管理', href: 'DBSystem/DBSystem/User' },
                                             { id: '12', text: '菜单管理', href: 'Menu/index.html' }, ]
                }
             </text>
            }
        }

            ]
        }];
        new PageUtil.MainPage({
            modulesConfig : config
        });
    });
    </script>
</body>
</html>
